#!/bin/sh -e

log() {
  /bin/echo -e "\n\x1b[1;33m[+] $*\x1b[0m";
}

log "Building"
cabal v1-build --ghc-option=-O0 --ghc-option=-Werror

log "Testing"
cabal v1-test --ghc-option=-O0
cabal check

log "Doctests"
cabal repl --with-ghc=doctest --ghc-options=-Wno-unused-packages

log "Formatting"
fourmolu -i src/ app/ test/

log "Linting"
hlint .

log "Check for diff"
if [ ! -z "$(git status --porcelain)" ]; then
  git status
  exit 1
fi
